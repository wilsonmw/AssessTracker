@model AssessTracker.Models.AssessmentViewModel

<h1>Add an Assessment</h1>
<h3>@ViewBag.addAssessmentError</h3>
<form asp-controller="Assessment" asp-action="addAssessment" method="post">
    
    <span asp-validation-for="Name"></span>
    <label asp-for="Name"></label>
    <input asp-for="Name">
    
    <input type="submit" value="Add Assessment">
</form>

<a href="dashboard">Cancel</a>