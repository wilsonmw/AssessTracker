@model AssessTracker.Models.TeacherViewModel

<div class="topLinks">
    <div class="goBackLinks">
        <a href="/dashboard">Cancel</a>
    </div>

    <div class="dashLogLinks">
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Logout</a>
    </div>
</div>

<h1>Add a Teacher</h1>
<h3>@ViewBag.addTeacherError</h3>
<form asp-controller="Teacher" asp-action="addTeacher" method="post" id="addTeacherForm">
    
    Prefix: <select name="prefix">
        <option value="Mrs">Mrs</option>
        <option value="Ms">Ms</option>
        <option value="Miss">Miss</option>
        <option value="Mr">Mr</option>
    </select><br>

    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"><br>
    
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName"></label>
    <input asp-for="LastName"><br>
    
    <span asp-validation-for="GradeLevel"></span>
    <label asp-for="GradeLevel"></label>
    <input asp-for="GradeLevel"><br>
    
    <input type="submit" value="Add Teacher">
</form>

@{if(ViewBag.permission == 9){
    <a href="/deleteTeacherPage" class="deleteLink">Click Here to Remove a Teacher</a>
}}