@model AssessTracker.Models.RegisterViewModel

@{
    ViewData["Title"] = "Assessment Tracker Login";
}
<h1>Welcome to the Assessment Tracker. Please log in below. If you do not have a login, please register.</h1>
<h3>Login:</h3>
@ViewBag.LoginError
<form action="login" method = "post">
    Email:<input type="text" name="email">
    Password:<input type="text" name="password">
    <input type="submit" value="Log In">
</form>

<h3>Register</h3>
<h4>@ViewBag.registerError</h4>
<form asp-controller="Home" asp-action="register" method="post">
    <span asp-validation-for="FirstName"></span>
    First Name: <input asp-for="FirstName">

    <span asp-validation-for="LastName"></span>
    Last Name: <input asp-for="LastName">

    <span asp-validation-for="Email"></span>
    Email Address: <input asp-for="Email">

    <span asp-validation-for="Organization"></span>
    Organization: <input asp-for="Organization">

    <span asp-validation-for="Password"></span>
    Password: <input asp-for="Password">

    <span asp-validation-for="PWConfirm"></span>
    Confirm Password: <input asp-for="PWConfirm">

    <input type="submit" value="Register">
</form>

